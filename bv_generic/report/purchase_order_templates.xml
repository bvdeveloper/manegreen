<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//p[@t-field='o.date_approve']" position="replace">
             <p t-esc="o.date_approve.strftime('%d-%m-%Y')" class="m-0"/>
        </xpath>
        <xpath expr="//th[@name='th_date_req']//strong" position="replace">
            <strong>HSN/SAC</strong>
        </xpath>
        <xpath expr="//span[@t-field='line.date_planned']" position="replace">
<!--            <span t-esc="line.date_planned.strftime('%d-%m-%Y')" class="m-0"/>-->
            <span t-field="line.product_id.l10n_in_hsn_code"/>
        </xpath>
        <xpath expr="//td[@name='td_taxes']" position="attributes">
            <attribute name="class">text-center</attribute>
        </xpath>
</template>
</odoo>
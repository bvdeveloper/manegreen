<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="bv_inherit_view_company_form" model="ir.ui.view">
        <field name="name">bv.inherit.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='favicon']" position="after">
                <field
                        name="company_stamp"
                        widget="image"
                        class="float-start oe_avatar"
                        groups="base.group_no_one"
                />
            </xpath>
            <xpath expr="//page[@name='general_info']" position="after">
                <page string="Factory Address" name="factory_address_info">
                    <group>
                        <group>
                            <field name="factory_address"/>
                            <field name="factory_pan_number"/>
                        </group>
                    </group>
                </page>
                <page string="Company Bank Details" name="company_bank_details">
                    <group>
                        <group>
                            <field name="bank_account_name"/>
                            <field name="bank_name"/>
                            <field name="bank_ifsc_code"/>
                            <field name="bank_branch"/>
                            <field name="bank_branch_address"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bv_inherit_view_move_form" model="ir.ui.view">
        <field name="name">bv.inherit.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="edi_state" position="after">
                <field name="vehicle_number"/>
                <field
                        name="po_number"
                        attrs="{
                            'invisible':[('move_type','in',('in_receipt', 'in_refund', 'in_invoice', 'entry'))]
                            }"
                />
            </field>
            <field name="invoice_vendor_bill_id" position="after">
                <field name="comment"/>
            </field>
            <field name="line_ids" position="after">
                <group>
                    <group>
                        <field name="create_uid"/>
                    </group>
                    <group>
                        <field name="checked_by"/>
                    </group>
                    <group>
                        <field name="verified_by"/>
                    </group>
                    <group>
                        <field name="auth_sign" string="Authorise signature"/>
                    </group>
                </group>
            </field>
        </field>
    </record>
</odoo>
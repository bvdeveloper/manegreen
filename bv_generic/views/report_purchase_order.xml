<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order Template -->
    <template
            id="bv_inherited_report_purchaseorder_document"
            inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//div[hasclass('page')]" position="attributes">
            <attribute name="style">font-size:14px !important; </attribute>
        </xpath>
        <xpath expr="//div[hasclass('page')]//div[2]" position="replace">
            <div class="mt-4">
                <h2
                        t-if="o.state in ['draft', 'sent', 'to approve']"
                        style="font-size:18px;"
                >
                    Request for Quotation #<span t-field="o.name"/>
                </h2>
                <h2
                        t-if="o.state in ['purchase', 'done']"
                        style="font-size:18px;"
                >
                    Purchase Order #<span t-field="o.name"/>
                </h2>
                <h2 t-if="o.state == 'cancel'" style="font-size:18px;">
                    Cancelled Purchase Order #<span t-field="o.name"/>
                </h2>
            </div>
        </xpath>
        <xpath expr="//t[@t-set='address']//div[@t-field='o.partner_id']" position="attributes">
            <attribute name="t-options">
                {"widget": "contact", "fields": ["address", "name", "phone", "mobile", "vat"], "no_marker": True, "phone_icons": True}
            </attribute>
        </xpath>
        <xpath expr="//t[@t-set='information_block']//div[@t-field='o.dest_address_id']" position="attributes">
            <attribute name="t-options">
                {"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}
            </attribute>
        </xpath>

        <xpath expr="//th[@name='th_description']" position="replace">
            <th name="th_description" style="text-align: left;">
                <strong>Product name</strong>
            </th>
        </xpath>

        <!-- Table order -->
        <xpath expr="//div[hasclass('page')]//table" position="attributes">
            <attribute name="class">table table-sm border border-dark mt-4</attribute>
        </xpath>
        <xpath expr="//div[@id='total']//table" position="attributes">
            <attribute name="class">table table-sm border border-dark</attribute>
        </xpath>

        <!-- Line index number -->
        <xpath expr="//th[@name='th_description']" position="before">
            <th name="th_si_no" class="text-center">
                <strong>S.No</strong>
            </th>
        </xpath>
        <xpath expr="//tbody//td[1]" position="before">
            <td name="si_no" class="text-center">
                <span t-esc="line_index + 1"/>
            </td>
        </xpath>

    </template>

    <!-- Purchase Quotation Template -->
    <template
            id="bv_inherited_report_purchasequotation_document"
            inherit_id="purchase.report_purchasequotation_document"
    >
        <xpath expr="//div[hasclass('page')]" position="attributes">
            <attribute name="style">font-size:14px;</attribute>
        </xpath>
        <xpath expr="//div[hasclass('page')]//h2" position="attributes">
            <attribute name="style">font-size:18px !important;</attribute>
        </xpath>

        <xpath expr="//th[@name='th_description']" position="replace">
            <th name="th_description" style="text-align: left;">
                <strong>Product name</strong>
            </th>
        </xpath>

        <!-- Table order -->
        <xpath expr="//div[hasclass('page')]//table" position="attributes">
            <attribute name="class">table table-sm mt-4 border border-dark</attribute>
        </xpath>

        <!-- Line index number -->
        <xpath expr="//th[@name='th_description']" position="before">
            <th name="th_si_no" style="text-align:left;">
                <strong>S.No</strong>
            </th>
        </xpath>
        <xpath expr="//tbody//td[1]" position="before">
            <td name="si_no" class="text-center">
                <span t-esc="order_line_index + 1"/>
            </td>
        </xpath>
         <xpath expr="//t[@t-set='address']//div[@t-field='o.partner_id']" position="attributes">
            <attribute name="t-options">
                {"widget": "contact", "fields": ["address", "name", "phone", "mobile", "vat"], "no_marker": True, "phone_icons": True}
            </attribute>
        </xpath>
        <xpath expr="//t[@t-set='information_block']//div[@t-field='o.dest_address_id']" position="attributes">
            <attribute name="t-options">
                {"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}
            </attribute>
        </xpath>
    </template>

    <template
            id="bv_inherit_gst_report_purchaseorder_document_inherit"
            inherit_id="l10n_in_purchase.gst_report_purchaseorder_document_inherit"
    >
        <xpath expr="//h6" position="attributes">
            <attribute name="style">font-size:14px;</attribute>
        </xpath>
    </template>
</odoo>
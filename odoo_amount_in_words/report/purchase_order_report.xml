<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchse_report_amount_in_words_inherit" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@class='row justify-content-end']" position="after">
               <div style="padding-top:20px;">
                    <p><span><strong>Total (In Words): </strong></span><span t-field="o.amount_words"/></p>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('page')]" position="after">
                <div class="row justify-content-end last-page"
                     style="margin-top:2rem; page-break-inside: avoid; font-size:14px;"
                >
                    <div class="col-4">
                        <div class="row justify-content-between" style="margin-bottom:45px; text-align:center;">
                            <p>For <span class="text-center" t-field="o.company_id.name"/></p>
                        </div>
                        <div class="row justify-content-between" style="margin-bottom:15px; text-align:center;">
                            <p><span class="text-center">Authorized Signatory</span></p>
                        </div>
                    </div>
                </div>
            </xpath>
    </template>

     <template
            id="bv_inherited_report_purchasequotation_document"
            inherit_id="purchase.report_purchasequotation_document"
    >
         <xpath expr="//div[hasclass('page')]" position="after">
            <div class="row justify-content-end last-page"
                 style="margin-top:2rem; page-break-inside: avoid; font-size:14px;"
            >
                <div class="col-4">
                    <div class="row justify-content-between" style="margin-bottom:45px; text-align:center;">
                        <p>For <span class="text-center" t-field="o.company_id.name"/></p>
                    </div>
                    <div class="row justify-content-between" style="margin-bottom:15px; text-align:center;">
                        <p><span class="text-center">Authorized Signatory</span></p>
                    </div>
                </div>
            </div>
        </xpath>
     </template>


</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="transporter_account_invoices_action" model="ir.actions.report">
            <field name="name">Transporter Copy</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">report_context.transporter_account_invoices</field>
            <field name="report_file">report_context.transporter_account_invoices</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="context">{'transporter_account_invoices': 1}</field>
            <field name="binding_type">report</field>
            <field name="groups_id"
                   eval="[(4, ref('account.group_account_invoice')), (4, ref('account.group_account_readonly'))]"
            />
        </record>

        <record id="triplicate_account_invoices_action" model="ir.actions.report">
            <field name="name">Triplicate Copy</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">report_context.triplicate_account_invoices</field>
            <field name="report_file">report_context.triplicate_account_invoices</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="context">{'triplicate_account_invoices': 1}</field>
            <field name="binding_type">report</field>
            <field name="groups_id"
                   eval="[(4, ref('account.group_account_invoice')), (4, ref('account.group_account_readonly'))]"
            />
        </record>
    </data>
</odoo>
